#Will only build on raspberry pi
FROM mcr.microsoft.com/dotnet/core/sdk:3.1-buster-slim-arm32v7 AS build

WORKDIR /app

COPY . ./
RUN dotnet publish API/API.csproj -c Release -o out -r linux-arm

FROM mcr.microsoft.com/dotnet/core/aspnet:3.1-buster-slim-arm32v7
WORKDIR /app

COPY --from=build /app/out . 
ENTRYPOINT ["dotnet", "API.dll"]

